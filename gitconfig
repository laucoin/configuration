# This is Git's per-user configuration file.
[user]
	name = Luc AUCOIN
	email = luc.aucoin1998@gmail.com
[core]
	editor = vim
	autocrlf = true
	excludesfile = ~/git-resources/gitignore
[push]
	default = current
[init]
	defaultBranch = develop
	templatedir = ~/git-resources/git-templates
[alias]
	s = status -s
	co = checkout
	cob = checkout -b
	del = branch -D
	br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
	reset = !git reset --hard
	log = !git log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) [%an]\" --abbrev-commit -30
	save = !git add -A && git commit -m ${1} && git push